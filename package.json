{
  "name": "react-mockups-vscode",
  "displayName": "react-mockups",
  "description": "View and test isolated components in React projects",
  "version": "0.0.2",
  "license": "MIT",
  "author": {
    "name": "jamsch",
    "email": "12927717+jamsch@users.noreply.github.com"
  },
  "repository": "https://github.com/jamsch/react-mockups-vscode",
  "publisher": "jamsch",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.mockup.tsx"
  ],
  "contributes": {
    "configuration": {
      "title": "React Mockups",
      "properties": {
        "react-mockups.websocket.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Hostname for the WebSocket server",
          "markdownDescription": "Hostname for the WebSocket server. Defaults to `127.0.0.1`."
        },
        "react-mockups.websocket.port": {
          "type": "number",
          "default": 1337,
          "description": "Port number for the WebSocket server",
          "markdownDescription": "Port number for the WebSocket server. Defaults to `1337`."
        }
      }
    },
    "commands": [
      {
        "command": "react-mockups.stopWebsocketServer",
        "title": "React Mockups: Stop WebSocket Server"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "@types/vscode": "^1.105.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
